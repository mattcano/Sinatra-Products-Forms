<h1>Product Created!</h1>

<p>
  The product has been created!
<p>

<div class="button_container">
  <a href="/" class="my_button">Return Home</a>
  <a href="/new_product" class="my_button">Create Another</a>
</div>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
  </tr>
  <% @rs2.each do |row| %>
    <tr>
      <td><a href="/products/<%= row[0] %>"><%= row[0] %></a></td>
      <td><%= row[2] %></td>
      <td><%= row[3] %></td>
      <td>
        <% if row[4] == "t"%>
        <img src="sale_icon.png" class="sale_icon">
        <% end %>
      </td>
    </tr>
  <% end %>
</table>