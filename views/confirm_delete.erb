<div class="button_container">
  <a href="/" class="my_button">Home</a>
  <p>
  <a href="/products" class="my_button">Product Home</a>
  <a href="/new_product" class="my_button">Add Product</a>
</div>

<h1>**Are you sure you want to delete this product?<br><%= @row[2] %></h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Sale?</th>
  </tr>
    <tr>
      <td><%= @row[0] %></td>
      <td><%= @row[2] %></td>
      <td><%= @row[3] %></td>
      <td>
        <% if @row[4] == "t"%>
        <img src="/sale_icon.png" class="sale_icon">
        <% else %>
        <img src="/red_x.png" class="sale_icon">
        <% end %>
      </td>
    </tr>
</table>

<%= @row.inspect %>

<div class="button_container">
  <form action="/products/destroyed?d=<%= @row[0] %>" method="post">
    <input type="submit" class="my_button"/>
  </form>
</div>

